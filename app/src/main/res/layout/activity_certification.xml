<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CertificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Certification"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/poppins"
        android:text="Title *"
        android:textColor="@color/job_type_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etFirstCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/spinner_bg"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Certificate Name"
        android:inputType="text"
        android:minHeight="39dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="Time Period"
        android:textColor="@color/job_type_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:fontFamily="@font/poppins"
        android:text="This Certificate or license does not expire"
        android:textSize="9sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="From"
        android:textColor="@color/job_type_color"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="5dp">

        <Spinner
            android:id="@+id/spinner_from_select_month"
            style="@style/customfontstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginVertical="8dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:elevation="5dp"
            android:minHeight="39dp" />

        <Spinner
            android:id="@+id/spinner_from_select_year"
            style="@style/customfontstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginVertical="8dp"
            android:layout_marginRight="28dp"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:elevation="5dp"
            android:minHeight="39dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="To"
        android:textColor="@color/job_type_color"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="5dp">

        <Spinner
            android:id="@+id/spinner_to_select_month"
            style="@style/customfontstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginVertical="8dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:elevation="5dp"
            android:minHeight="39dp" />

        <Spinner
            android:id="@+id/spinner_to_select_year"
            style="@style/customfontstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginRight="28dp"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:elevation="5dp"
            android:minHeight="39dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/spinner_bg"
        android:drawableRight="@drawable/file_upload_24"
        android:fontFamily="@font/poppins"
        android:gravity="left|center"
        android:minHeight="39dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:text="Add Certification Detail *"
        android:textAppearance="@style/customfontstyle"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/poppins"
        android:text="Profile Summary"
        android:textColor="@color/job_type_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etProfileSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/spinner_bg"
        android:gravity="top"
        android:hint="Profile Summary..."
        android:inputType="textMultiLine"
        android:lines="6"
        android:overScrollMode="always"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingRight="5dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textSize="16sp"
        tools:ignore="TouchTargetSizeCheck" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:backgroundTint="@color/drawable_bg"
                android:elevation="20dp"
                android:fontFamily="@font/poppins"
                android:minHeight="37dp"
                android:text="Save" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="38dp"
                android:layout_weight="1"
                android:background="@drawable/gradient_color"
                android:elevation="15dp"
                android:fontFamily="@font/poppins"
                android:minHeight="37dp"
                android:text="Next"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
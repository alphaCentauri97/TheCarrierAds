<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExperienceActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/left_arrow" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="18dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Certification"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/poppins"
                android:text="Company Name *"
                android:textColor="@color/job_type_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Company Name"
                android:inputType="text"
                android:minHeight="39dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="Designation *"
                android:textColor="@color/job_type_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Designation"
                android:inputType="text"
                android:minHeight="39dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="Roles and Responsbility *"
                android:textColor="@color/job_type_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etRolesAndResponsibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Roles and Responsbility"
                android:inputType="text"
                android:minHeight="39dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="Location *"
                android:textColor="@color/job_type_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etFirstCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="City"
                android:inputType="text"
                android:minHeight="39dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rdCurrentlyWorking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="Currently Working" />

            <RadioButton
                android:id="@+id/rdPartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/poppins"
                android:text="Previously Working" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Duration"
                android:textColor="@color/job_type_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="Start"
                android:textColor="@color/job_type_color"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <Spinner
                    android:id="@+id/spinner_from_select_month"
                    style="@style/customfontstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:elevation="5dp"
                    android:minHeight="39dp" />

                <Spinner
                    android:id="@+id/spinner_from_select_year"
                    style="@style/customfontstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginRight="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:elevation="5dp"
                    android:minHeight="39dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="End"
                android:textColor="@color/job_type_color"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <Spinner
                    android:id="@+id/spinner_to_select_month"
                    style="@style/customfontstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:elevation="5dp"
                    android:minHeight="39dp" />

                <Spinner
                    android:id="@+id/spinner_to_select_year"
                    style="@style/customfontstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginRight="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:elevation="5dp"
                    android:minHeight="39dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="Contact Person Detail *"
                android:textColor="@color/job_type_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etEmailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:minHeight="39dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:minHeight="39dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/gradient_color"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
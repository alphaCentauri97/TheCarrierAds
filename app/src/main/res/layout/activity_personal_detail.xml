<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonalDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Personal Details"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="end"
            android:paddingRight="10dp"
            android:text="15 %"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="14dp"
        android:fontFamily="@font/poppins"
        android:text="Your personal details will make you profile richer"
        android:textColor="@color/job_type_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/poppins"
            android:text="Father Name*"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etFatherFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:minHeight="39dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/etFatherLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="28dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:minHeight="39dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/poppins"
            android:text="Mother Name*"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etMotherFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:minHeight="39dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/etMotherLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="28dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_bg"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:minHeight="39dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/poppins"
            android:text="Permanent Address*"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_bg"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Address"
            android:inputType="textEmailAddress"
            android:minHeight="39dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/spinner_bg"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Pin Code"
            android:inputType="number"
            android:minHeight="39dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:textSize="16sp" />


        <Spinner
            android:id="@+id/spinner_country"
            style="@style/customfontstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/spinner_background"
            android:elevation="10dp"
            android:minHeight="39dp" />

        <Spinner
            android:id="@+id/spinner_state"
            style="@style/customfontstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginVertical="22dp"
            android:background="@drawable/spinner_background"
            android:elevation="10dp"
            android:minHeight="39dp" />

        <Spinner
            android:id="@+id/spinner_city"
            style="@style/customfontstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:background="@drawable/spinner_background"
            android:elevation="10dp"
            android:minHeight="39dp"

            />

        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/gradient_color"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
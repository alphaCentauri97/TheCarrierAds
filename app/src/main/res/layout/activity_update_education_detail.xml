<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:backgroundTint="@color/background_color"
    android:elevation="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Update Professional Detail"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="Highest Qualification"
        android:textColor="@color/job_type_color"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinner_highest_qualification"
        style="@style/customfontstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/spinner_background"
        android:elevation="10dp"
        android:minHeight="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/poppins"
        android:text="Institution"
        android:textColor="@color/job_type_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etInstitution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/spinner_bg"
        android:ems="10"
        android:elevation="18dp"
        android:fontFamily="@font/poppins"
        android:hint="School/College/University"
        android:inputType="text"
        android:minHeight="39dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/poppins"
        android:text="Specialization"
        android:textColor="@color/job_type_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etSpecialization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/spinner_bg"
        android:ems="10"
        android:elevation="18dp"
        android:fontFamily="@font/poppins"
        android:hint="School/College/University"
        android:inputType="text"
        android:minHeight="39dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/poppins"
        android:text="Passing Year"
        android:textColor="@color/job_type_color"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinner_passing_year"
        style="@style/customfontstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/spinner_background"
        android:elevation="10dp"
        android:minHeight="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/poppins"
        android:text="Education Type"
        android:textColor="@color/job_type_color"
        android:textSize="16sp" />

    <RadioButton
        android:id="@+id/rdFullTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppins"
        android:text="Full Time" />

    <RadioButton
        android:id="@+id/rdPartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppins"
        android:text="Part Time" />

    <RadioButton
        android:id="@+id/rdCorrespondense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppins"
        android:text="Correspondence" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_color"
            android:elevation="15dp"
            android:fontFamily="@font/poppins"
            android:minHeight="37dp"
            android:text="Update"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.544"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.775" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
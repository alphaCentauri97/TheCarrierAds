<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    tools:context=".Fragments.EditProfileFragment.AboutMeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="50dp"
        android:elevation="18dp"
        android:minHeight="60dp"
        >

        <Button
            android:id="@+id/btnPersonalDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_color"
            android:drawableRight="@drawable/add_24"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center|left"
            android:paddingLeft="18dp"
            android:paddingRight="10dp"
            android:text="Add Personal details"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="22dp"
        android:elevation="18dp"
        android:minHeight="60dp"
        app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/btnAddSkill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_color"
            android:drawableRight="@drawable/add_24"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center|left"
            android:paddingLeft="18dp"
            android:paddingRight="10dp"
            android:text="Add Skill"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="22dp"
        android:elevation="18dp"
        android:minHeight="60dp"
        app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/btnProjectSkill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_color"
            android:drawableRight="@drawable/add_24"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center|left"
            android:paddingLeft="18dp"
            android:paddingRight="10dp"
            android:text="Add Project details"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="22dp"
        android:elevation="18dp"
        android:minHeight="60dp"
        app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/btnLanguage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_color"
            android:drawableRight="@drawable/add_24"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center|left"
            android:paddingLeft="18dp"
            android:paddingRight="10dp"
            android:text="Add Language"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:elevation="18dp"
        android:minHeight="60dp"
        android:layout_marginTop="22dp"
        app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/btnProfileSummary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_color"
            android:drawableRight="@drawable/add_24"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center|left"
            android:paddingLeft="18dp"
            android:paddingRight="10dp"
            android:text="Add Profile Summary"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.BottomNavigation.SearchFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins"
        android:text="hii,"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Bright B"
        android:textColor="@color/black"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_bg"
        android:backgroundTint="@color/grey_color"
        android:fontFamily="@font/poppins_semibold"
        android:paddingHorizontal="11dp"
        android:paddingVertical="2dp"
        android:text="Filters"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:layout_marginVertical="6dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_jobType"
        android:layout_width="match_parent"
        android:paddingLeft="4dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvresult"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="280 results"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_userResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp"/>

</LinearLayout>